<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <springProperty scope="context" name="contextName" source="spring.application.name"/>
    <property name="logBasePath" value=" ../logs"></property>
    <property name="LOGFILE_HOME" value="${logBasePath}/${contextName}"/>
    <property name="LOGFILE_DATESUFFIX" value="%d{yyyyMMdd}.%i"/>
    <property name="PRINT_PATTERN"
              value="%date{yyyyMMdd HH:mm:ss.SSS} %-5level %marker %mdc{requestId} [%thread] %logger{36}.%M:%L - %msg%n"/>
    <property name="ERROR_PRINT_PATTERN"
              value="%date{yyyyMMdd HH:mm:ss.SSS} %-5level %marker %mdc{requestId} [%thread] %logger{36}.%M:%L - %msg%n -%caller{20}"/>

    <!--输出至控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <pattern>${PRINT_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--所有日志信息输出至文件-->
    <appender name="allLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGFILE_HOME}/all${LOGFILE_DATESUFFIX}.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>15</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${PRINT_PATTERN}</pattern>
        </encoder>
    </appender>
    <!--错误信息日志输出至文件-->
    <appender name="error_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGFILE_HOME}/error${LOGFILE_DATESUFFIX}.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>5</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${ERROR_PRINT_PATTERN}</pattern>
        </encoder>
    </appender>

    <!--所有sql日志信息输出到文件-->
    <appender name="sqlLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGFILE_HOME}/sql${LOGFILE_DATESUFFIX}.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>10</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${PRINT_PATTERN}</pattern>
        </encoder>
    </appender>

    <!--所有慢查询日志信息输出到文件-->
    <appender name="slowsqlLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGFILE_HOME}/slowsql${LOGFILE_DATESUFFIX}.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>5</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${PRINT_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="allLog"/>
    </root>

    <!-- 产品内部所有错误日志用error_file打印器打印 -->
    <logger name="com.bluecloud.vnet" level="info">
        <appender-ref ref="error_file"/>
    </logger>

    <!-- 数据库连接池报错用sqlLog打印器打印 -->
    <logger name="com.alibaba.druid" level="error">
        <appender-ref ref="sqlLog"/>
    </logger>

    <!-- 慢查询用sqlLog打印器打印 -->
    <logger name="com.alibaba.druid.filter.stat.StatFilter" level="error">
        <appender-ref ref="slowsqlLog"/>
    </logger>
</configuration>
